// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "JetBrains",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  // 終了前に確認
  "confirm_quit": true,
  // UI のフォント設定
  "ui_font_size": 15,
  "ui_font_family": "Hack Nerd Font",
  "ui_font_fallbacks": ["HackGen Console NF"],
  // エディタのフォント設定
  "buffer_font_size": 13,
  // フォント設定
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_fallbacks": ["HackGen Console NF"],
  "buffer_line_height": "standard",
  // カラーテーマ
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  // vim モード
  "vim_mode": true,
  "vim": {
    // システムクリップボードの使用
    "use_system_clipboard": "always",
    // `f` や `t` での検索範囲を複数行にする
    "use_multiline_find": true,
    // `f` や `t` での検索時に大文字小文字を区別しない
    "use_smartcase_find": true,
    // 相対行数と絶対行数の切り替え(Insert Mode時)
    "toggle_relative_line_numbers": true
  },
  // 空白文字の表示
  "show_whitespaces": "all",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "terminal": {
    "font_size": 13,
    "font_family": "Hack Nerd Font",
    "font_fallbacks": ["HackGen Console NF"],
    "line_height": {
      "custom": 1.2
    },
    "working_directory": "current_project_directory",
    "env": {
      "LANG": "ja_JP.UTF-8",
      "LC_ALL": "ja_JP.UTF-8"
    }
  },
  "languages": {
    "Python": {
      "enable_language_server": true,
      "preferred_line_length": 150,
      "show_whitespaces": "all",
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "features": {
    "inline_completion_provider": "copilot"
  },
  "lsp": {
    "lsp": {
      "rust-analyzer": {
        "initialization_options": {
          "inlayHints": {
            "maxLength": null,
            "lifetimeElisionHints": {
              "enable": "skip_trivial",
              "useParameterNames": true
            },
            "closureReturnTypeHints": {
              "enable": "always"
            }
          }
        }
      },
      "pyright": {
        "settings": {
          "python": {
            "pythonPath": ".venv/bin/python"
          },
          "python.analysis": {
            "diagnosticMode": "workspace",
            "typeCheckingMode": "strict"
          }
        }
      },
      "ruff": {
        "initialization_options": {
          "settings": {
            // Ruff server settings goes here
            "lineLength": 150,
            "lint": {
              "enable": true,
              "select": ["ALL"],
              "extendSelect": ["I"],
              "ignore": [],
              "showSyntaxErrors": true,
              "args": ["--config", "./pyproject.toml"]
            },
            "format": {
              "enable": true
            }
          }
        }
      }
    }
  }
}
